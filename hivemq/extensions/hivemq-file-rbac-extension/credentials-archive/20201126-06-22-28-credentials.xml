<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<file-rbac>
    <users>
        <user>
            <name>myiotservice</name>
            <password>secret</password>
            <roles>
                <id>myiotservice</id>
            </roles>
        </user>
        <user>
            <name>device1</name>
            <password>device1</password>
            <roles>
                <id>device</id>
            </roles>
        </user>
        <user>
            <name>superuser</name>
            <password>secret</password>
            <roles>
                <id>superuser</id>
            </roles>
        </user>
    </users>
    <roles>
        <role>
            <id>device</id>
            <permissions>
                <permission>
                    <topic>devices/${{clientid}}/receive/#</topic>
                    <activity>SUBSCRIBE</activity>
                    <qos>ALL</qos>
                    <retain>ALL</retain>
                    <shared-subscription>ALL</shared-subscription>
                    <shared-group>#</shared-group>
                </permission>
                <permission>
                    <topic>devices/${{clientid}}/send/#</topic>
                    <activity>PUBLISH</activity>
                    <qos>ALL</qos>
                    <retain>ALL</retain>
                    <shared-subscription>ALL</shared-subscription>
                    <shared-group>#</shared-group>
                </permission>
            </permissions>
        </role>
        <role>
            <id>myiotservice</id>
            <permissions>
                <permission>
                    <topic>devices/#</topic>
                    <activity>ALL</activity>
                    <qos>ALL</qos>
                    <retain>ALL</retain>
                    <shared-subscription>ALL</shared-subscription>
                    <shared-group>#</shared-group>
                </permission>
            </permissions>
        </role>
        <role>
            <id>superuser</id>
            <permissions>
                <permission>
                    <topic>#</topic>
                    <activity>ALL</activity>
                    <qos>ALL</qos>
                    <retain>ALL</retain>
                    <shared-subscription>ALL</shared-subscription>
                    <shared-group>#</shared-group>
                </permission>
            </permissions>
        </role>
    </roles>
</file-rbac>
