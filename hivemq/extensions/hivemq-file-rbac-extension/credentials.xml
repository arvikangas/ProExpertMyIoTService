<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<file-rbac>
  <users>
    <user>
      <name>myiotservice</name>
      <password>secret</password>
      <roles>
        <id>myiotservice</id>
      </roles>
    </user>
    <user>
      <name>device1</name>
      <password>device1</password>
      <roles>
        <id>device</id>
      </roles>
    </user>
    <user>
      <name>superuser</name>
      <password>secret</password>
      <roles>
        <id>superuser</id>
      </roles>
    </user>
    <user>
      <name>device2</name>
      <password>secret2</password>
      <roles>
        <id>device</id>
      </roles>
    </user>
  </users>
  <roles>
    <role>
      <id>device</id>
      <permissions>
        <permission>
          <topic>devices/${{username}}/receive/#</topic>
          <activity>SUBSCRIBE</activity>
        </permission>
        <permission>
          <topic>devices/${{username}}/send/#</topic>
          <activity>PUBLISH</activity>
        </permission>
      </permissions>
    </role>
    <role>
      <id>myiotservice</id>
      <permissions>
        <permission>
          <topic>devices/#</topic>
        </permission>
      </permissions>
    </role>
    <role>
      <id>superuser</id>
      <permissions>
        <permission>
          <topic>#</topic>
        </permission>
      </permissions>
    </role>
  </roles>
</file-rbac>