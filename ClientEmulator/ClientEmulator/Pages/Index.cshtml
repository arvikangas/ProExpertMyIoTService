@page
<div class="container">
    <div class="row">&nbsp;</div>
    <div class="form-row">
        <div class="col-3">
            <input id="device-id" type="text" class="form-control" placeholder="Device Id">
        </div>
        <div class="col-3">
            <input id="password" type="text" class="form-control" placeholder="Password">
        </div>
        <div class="col-3">
            <input type="button" id="send-device-id" value="Set Device Id" />
        </div>
        <div class="col-3" id="send-device-id-result">
            
        </div>
    </div>
    <div class="row">
        <div class="col-2">Command</div>
        <div class="col-4"><input type="text" id="command" /></div>
    </div>
    <div class="row">
        <div class="col-2">Value</div>
        <div class="col-4"><input type="text" id="value" /></div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="send" value="Send Message" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="messages"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/mqtt.js"></script>
